<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Looking for an imaginnany!</title>
</head>

<body>
  <div class="container">
    <h1 class="mt-5">Looking for an imaginanny!</h1>
    <p>Filter your research by category and price.</p>
    <%= simple_form_for :filter, url: characters_path, method: :get do |f| %>
      <%= f.input :category, collection: %w[Villains Disney Pixar Marvel DC Action Books Family] %>
      <%= f.input :max_price, input_html: {placeholder: "Max price"} %>
      <%= f.submit "Filter", class:"btn" %>
    <% end %>

    <%# Displaying the characters %>
    <div class="mt-5">
      <% if @characters.any? %>
        <div class="row">
            <% @characters.each do |character| %>
            <div class="col-md-4">
              <div class="cards mb-4">
              <div class="character-card">
              <%= link_to character_path(character), class: "text-decoration-none text-black" do %>
                <%= image_tag character.photo.url, height: 250 %>
                <div class="card-body">
                  <h5 class="card-title"><%= character.character_name %></h5>
                  <p class="card-text"><%= character.category %></p>
                  <p class="card-text"><%= character.description.lines('.').first %></p>
                  <p class="card-text"><%= character.price %></p>
                <% end %>
                </div>
              </div>
              </div>
            </div>
          <% end %>
          </div>
          </div>
      <% else %>
        <h4>No characters found.</h4>
      <% end %>
    </div>
  </div>
</body>
</html>
